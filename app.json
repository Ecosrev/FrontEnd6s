{
  "expo": {
    "name": "EcosRev",
    "slug": "ecosrev",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#fafafa"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Este app precisa acessar o microfone para reconhecimento de voz",
        "NSSpeechRecognitionUsageDescription": "Este app precisa usar reconhecimento de fala"
      }
    },
    "android": {
      "usesCleartextTraffic": true,
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "newArchEnabled": true,
      "package": "com.EcosRev.EcosRevApp"
    },
    "web": {},
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera."
        }
      ],
      "expo-font",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Permitir $(PRODUCT_NAME) acessar o microfone para reconhecimento de voz.",
          "speechRecognitionPermission": "Permitir $(PRODUCT_NAME) usar reconhecimento de fala."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "1fe31fa5-111b-4650-aaed-a9c048328ef8"
      }
    }
  }
}